<Context path="/Kwa2Bo" docBase="Kwa2Bo" debug="99">
  <!-- Definition du pool -->
  <Resource
    name="mabase"
    auth="Container"
    type="javax.sql.DataSource"
    maxActive="8"
    maxIdle="4"
    maxWait="10000"
    username="fevrer"
    password="moi"
    driverClassName="org.postgresql.Driver"
    url="jdbc:postgresql:fevrer"
  />
  <!-- Definition gmail -->
  <Resource
    auth="Container"
    mail.smtp.host=" smtp.yopmail.com"
    name="mail/Session"
    type="javax.mail.Session"/>
  />

  <Realm
    className="org.apache.catalina.realm.DataSourceRealm"
    debug="99"
    dataSourceName="mabase"
    localDataSource="true"
    userTable="kwa2bo_utilisateur"
    userNameCol="mail"
    userCredCol="mdp"
    userRoleTable="kwa2bo_utilisateur"
    roleNameCol="role"
  />
</Context>
